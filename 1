#include <iostream>
#include <cstdlib>
using namespace std;
int main() {
	int i, n,j=0,q,k,h=0;
	int** a;
	cin >> n;
	if (n <= 0)
		cout << "Данные введены некорректно";
	else {
	    
		k = n;
		q = n + n - 1;
		a = (int**)malloc(q*sizeof(int));
		for (int i = 0; i < n; i++)
			a[i] = (int*)malloc(n * sizeof(int));
		for (i = n-1; i > -1; i -= 1) {
			for (j; j < q; j += 2)
				a[i][j] = k;
			k -= 1;
			h+=1;
			j =h;
			q -= 1;
		}
		k=1;
		q = n + n - 1;
	for (i = 0; i < n; i++) {
			for (j = 0; j < q; j++) 
			if ((a[i][j]!=0) and (a[i][j]!=k))
			a[i][j]=0;
			k=k+1;
			j=0;
	}
		for (i = 0; i < n; i++) {
			for (j = 0; j < q; j++)
			if (a[i][j]==0)
			cout<<" "<<" ";
			else
				cout << a[i][j] << " ";
			cout << endl;
		}
		free(a);
	}
	return 0;
}
